<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="Detail Pengiriman"
                android:textStyle="bold"
                android:layout_gravity="center|start"
                android:textColor="@color/textcolor1"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="40%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="Kode Resi"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text=":"
                    android:layout_gravity="center|end"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="60%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/koderesi"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="40%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="Lokasi Pesan"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text=":"
                    android:layout_gravity="center|end"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="60%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/lokasipesan"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="40%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="Lokasi Tujuan"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text=":"
                    android:layout_gravity="center|end"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="60%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/lokasitujuan"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="40%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="Pengirim"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text=":"
                    android:layout_gravity="center|end"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                app:layout_flexBasisPercent="60%"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/namapengirim"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center|start"
                    android:textColor="@color/textcolor2"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </com.google.android.flexbox.FlexboxLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:text="Status Pengiriman"
            android:textStyle="bold"
            android:layout_gravity="center|start"
            android:textColor="@color/textcolor1"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            app:layout_flexBasisPercent="40%"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="Delivered"
                android:layout_gravity="center|start"
                android:textColor="@color/textcolor2"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text=":"
                android:layout_gravity="center|end"
                android:textColor="@color/textcolor2"
