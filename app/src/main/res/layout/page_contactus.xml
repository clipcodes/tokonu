<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@android:color/white"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="3dp"
                    app:srcCompat="@drawable/icon_back"
                    android:id="@+id/back"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:lines="1"
                        android:text="Pusat Bantuan"
                        android:id="@+id/titel"
                        android:ellipsize="end"
                        android:textColor="@color/textcolor1"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/greytranspa0"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/greytranspa0"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="Ada Masalah? Hubungi Kami"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Customer service kami siap membantu anda apabisa Anda mempunyai pertanyaan atau masalah."
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textcolor2"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone"
                        android:layout_height="40dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Telepon"
                            android:textAlignment="center"
                            android:textColor="@color/textcolor2"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="0821 3724 1320"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"
                            android:textColor="@color/textcolor2"
                            android:textSize="17sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:text="HUBUNGI"
                    android:id="@+id/hubungihp"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="end|center"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/wa"
                        android:layout_gravity="center"
                        android:layout_height="40dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Whatsapp"
                            android:textAlignment="center"
                            android:textColor="@color/textcolor2"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="0821 3724 1320"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"
                            android:textColor="@color/textcolor2"
                            android:textSize="17sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:text="HUBUNGI"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/hubungiwa"
                    android:layout_gravity="end|center"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/email"
                        android:layout_gravity="center"
                        android:layout_height="40dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Email"
                            android:textAlignment="center"
                            android:textColor="@color/textcolor2"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Nginepajaid@gmail.com"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"
                            android:textColor="@color/textcolor2"
                            android:textSize="17sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:text="HUBUNGI"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/hubungiemail"
                    android:layout_gravity="end|center"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Media Sosial"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="60dp"
                        android:src="@drawable/ig"
                        android:layout_gravity="center"
                        android:layout_height="60dp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:src="@drawable/ic_fab"
                        android:layout_gravity="center"
                        android:layout_height="60dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Alamat Kantor"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="PT. YOGI Group"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Jl. Trans kalimantan Utara Np.1, Panca Agung, Bulungan"
                    android:textColor="@color/textcolor2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="11253"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Indonesia"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Versi Aplikasi"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Versi 1.0"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>